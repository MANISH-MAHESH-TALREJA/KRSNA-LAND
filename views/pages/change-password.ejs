<%- include('../partials/header.ejs'); %>
<section class="bg-primary py-3 py-md-5 py-xl-8">
  <div class="container">
    <div class="row gy-4 align-items-center">
      <div class="col-12 col-md-6 col-xl-7">
        <div class="d-flex justify-content-center text-bg-primary">
          <div class="col-12 col-xl-9">
            <img class="img-fluid rounded mb-4" loading="lazy" src="https://www.iskconcommunications.org/images/faviconiskcon.png" width="245" height="80" alt="ISKCON">
            <hr class="border-primary-subtle mb-4">
            <h2 class="h1 mb-4">Unforgettable Journeys, Tailored for You</h2>
            <p class="lead mb-5">We design personalized itineraries, provide expert travel tips, create inspiring content, and leverage advanced vacation planning tools.</p>
            <div class="text-endx">
              <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" fill="currentColor" class="bi bi-grip-horizontal" viewBox="0 0 16 16">
                <path d="M2 8a1 1 0 1 1 0 2 1 1 0 0 1 0-2zm0-3a1 1 0 1 1 0 2 1 1 0 0 1 0-2zm3 3a1 1 0 1 1 0 2 1 1 0 0 1 0-2zm0-3a1 1 0 1 1 0 2 1 1 0 0 1 0-2zm3 3a1 1 0 1 1 0 2 1 1 0 0 1 0-2zm0-3a1 1 0 1 1 0 2 1 1 0 0 1 0-2zm3 3a1 1 0 1 1 0 2 1 1 0 0 1 0-2zm0-3a1 1 0 1 1 0 2 1 1 0 0 1 0-2zm3 3a1 1 0 1 1 0 2 1 1 0 0 1 0-2zm0-3a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
              </svg>
            </div>
          </div>
        </div>
      </div>
      <div class="col-12 col-md-6 col-xl-5">
        <div class="card border-0 rounded-4">
          <div class="card-body p-3 p-md-4 p-xl-5">

            <div class="tab-pane fade show active" id="traveler" role="tabpanel" aria-labelledby="traveler-tab">
                <h3>Reset Your Password</h3>
                <form action="/resetPassword/<%= id %>" method="post">

                  <div class="mb-3">
                    <label for="traveler-password" class="form-label">Password</label>
                    <input type="password" class="form-control" id="traveler-password" name="password" placeholder="Password" required>
                  </div>
                  <div class="mb-3">
                    <label for="traveler-confirm-password" class="form-label">Confirm Password</label>
                    <input type="password" class="form-control" id="traveler-confirm-password" name="confirmPassword" placeholder="Confirm Password" required>
                  </div>

                  <div class="mt-3 d-flex justify-content-between">
                    <a href="/login" class="btn btn-outline-warning">Log in</a>
                    <button type="submit" class="btn btn-outline-primary">Change Password</button>
                    <a href="/register" class="btn btn-outline-success">Register</a>
                  </div>
                </form>
              </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<%- include('../modals/reset-password.ejs'); %>
<%- include('../partials/auth-footer.ejs'); %>
