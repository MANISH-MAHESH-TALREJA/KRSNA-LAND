<link rel="stylesheet" href="https://unpkg.com/bootstrap@5.3.3/dist/css/bootstrap.min.css">
<link rel="stylesheet" href="https://unpkg.com/bs-brain@2.0.4/components/logins/login-9/assets/css/login-9.css">

<!-- Signup Page -->
<section class="bg-primary py-3 py-md-5 py-xl-8">
    <div class="container">
        <div class="row gy-4 align-items-center">
            <div class="col-12 col-md-6 col-xl-7">
                <div class="d-flex justify-content-center text-bg-primary">
                    <div class="col-12 col-xl-9">
                        <img class="img-fluid rounded mb-4" loading="lazy" src="/fiteducoach.png" width="245"
                             height="80" alt="BootstrapBrain Logo">
                        <hr class="border-primary-subtle mb-4">
                        <h2 class="h1 mb-4">Join Us to Elevate Your Fitness Career!</h2>
                        <p class="lead mb-5">Sign up to access personalized plans, expert training, inspiring content,
                            and cutting-edge fitness technology.</p>
                    </div>
                </div>
            </div>
            <div class="col-12 col-md-6 col-xl-5">
                <div class="card border-0 rounded-4">
                    <div class="card-body p-3 p-md-4 p-xl-5">
                        <ul class="nav nav-tabs mb-4" id="registerTabs" role="tablist">
                            <li class="nav-item" role="presentation">
                                <button class="nav-link active" id="job-seeker-tab" data-bs-toggle="tab" data-bs-target="#job-seeker" type="button" role="tab" aria-controls="job-seeker" aria-selected="true">Job Seeker</button>
                            </li>
                            <li class="nav-item" role="presentation">
                                <button class="nav-link" id="job-poster-tab" data-bs-toggle="tab" data-bs-target="#job-poster" type="button" role="tab" aria-controls="job-poster" aria-selected="false">Job Poster</button>
                            </li>
                        </ul>
                        <div class="tab-content" id="registerTabsContent">
                            <!-- Job Seeker Registration -->
                            <div class="tab-pane fade show active" id="job-seeker" role="tabpanel" aria-labelledby="job-seeker-tab">
                                <h3>Register as Job Seeker</h3>
                                <form action="#">
                                    <div class="mb-3">
                                        <label for="seeker-name" class="form-label">Name</label>
                                        <input type="text" class="form-control" id="seeker-name" placeholder="Your Name" required>
                                    </div>
                                    <div class="mb-3">
                                        <label for="seeker-email" class="form-label">Email</label>
                                        <input type="email" class="form-control" id="seeker-email" placeholder="name@example.com" required>
                                    </div>
                                    <div class="mb-3">
                                        <label for="seeker-mobile" class="form-label">Mobile</label>
                                        <input type="tel" class="form-control" id="seeker-mobile" placeholder="1234567890" required>
                                    </div>
                                    <div class="mb-3">
                                        <label for="seeker-password" class="form-label">Password</label>
                                        <input type="password" class="form-control" id="seeker-password" placeholder="Password" required>
                                    </div>
                                    <div class="form-check mb-3">
                                        <input class="form-check-input" type="checkbox" id="seeker-terms" required>
                                        <label class="form-check-label" for="seeker-terms">
                                            I agree to the <a href="#">Terms and Conditions</a>
                                        </label>
                                    </div>
                                    <button type="submit" class="btn btn-primary">Sign up</button>
                                </form>
                            </div>

                            <!-- Job Poster Registration -->
                            <div class="tab-pane fade" id="job-poster" role="tabpanel" aria-labelledby="job-poster-tab">
                                <h3>Register as Job Poster</h3>
                                <form action="#">
                                    <div class="mb-3">
                                        <label for="poster-name" class="form-label">Name</label>
                                        <input type="text" class="form-control" id="poster-name" placeholder="Your Name" required>
                                    </div>
                                    <div class="mb-3">
                                        <label for="poster-email" class="form-label">Email</label>
                                        <input type="email" class="form-control" id="poster-email" placeholder="name@example.com" required>
                                    </div>
                                    <div class="mb-3">
                                        <label for="poster-mobile" class="form-label">Mobile</label>
                                        <input type="tel" class="form-control" id="poster-mobile" placeholder="1234567890" required>
                                    </div>
                                    <div class="mb-3">
                                        <label for="poster-password" class="form-label">Password</label>
                                        <input type="password" class="form-control" id="poster-password" placeholder="Password" required>
                                    </div>
                                    <div class="form-check mb-3">
                                        <input class="form-check-input" type="checkbox" id="poster-terms" required>
                                        <label class="form-check-label" for="poster-terms">
                                            I agree to the <a href="#">Terms and Conditions</a>
                                        </label>
                                    </div>
                                    <button type="submit" class="btn btn-primary">Sign up</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<script src="https://unpkg.com/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
