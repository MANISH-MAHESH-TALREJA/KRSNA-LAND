<link rel="stylesheet" href="https://unpkg.com/bootstrap@5.3.3/dist/css/bootstrap.min.css">
<link rel="stylesheet" href="https://unpkg.com/bs-brain@2.0.4/components/logins/login-9/assets/css/login-9.css">
<!-- Login 9 - Bootstrap Brain Component -->
<section class="bg-primary py-3 py-md-5 py-xl-8">
  <div class="container">
    <div class="row gy-4 align-items-center">
      <div class="col-12 col-md-6 col-xl-7">
        <div class="d-flex justify-content-center text-bg-primary">
          <div class="col-12 col-xl-9">
            <img class="img-fluid rounded mb-4" loading="lazy" src="/fiteducoach.png" width="245" height="80" alt="BootstrapBrain Logo">
            <hr class="border-primary-subtle mb-4">
            <h2 class="h1 mb-4">Empowering Your Fitness Career to Stand Out.</h2>
            <p class="lead mb-5">We craft personalized plans, provide expert training, create inspiring content, and leverage cutting-edge fitness technology.</p>
            <div class="text-endx">
              <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" fill="currentColor" class="bi bi-grip-horizontal" viewBox="0 0 16 16">
                <path d="M2 8a1 1 0 1 1 0 2 1 1 0 0 1 0-2zm0-3a1 1 0 1 1 0 2 1 1 0 0 1 0-2zm3 3a1 1 0 1 1 0 2 1 1 0 0 1 0-2zm0-3a1 1 0 1 1 0 2 1 1 0 0 1 0-2zm3 3a1 1 0 1 1 0 2 1 1 0 0 1 0-2zm0-3a1 1 0 1 1 0 2 1 1 0 0 1 0-2zm3 3a1 1 0 1 1 0 2 1 1 0 0 1 0-2zm0-3a1 1 0 1 1 0 2 1 1 0 0 1 0-2zm3 3a1 1 0 1 1 0 2 1 1 0 0 1 0-2zm0-3a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
              </svg>
            </div>
          </div>
        </div>
      </div>
      <div class="col-12 col-md-6 col-xl-5">
        <div class="card border-0 rounded-4">
          <div class="card-body p-3 p-md-4 p-xl-5">
            <ul class="nav nav-tabs mb-4" id="loginTabs" role="tablist">
              <li class="nav-item" role="presentation">
                <button class="nav-link active" id="job-seeker-tab" data-bs-toggle="tab" data-bs-target="#job-seeker" type="button" role="tab" aria-controls="job-seeker" aria-selected="true">Login as Job Seeker</button>
              </li>
              <li class="nav-item" role="presentation">
                <button class="nav-link" id="job-poster-tab" data-bs-toggle="tab" data-bs-target="#job-poster" type="button" role="tab" aria-controls="job-poster" aria-selected="false">Login as Job Poster</button>
              </li>
            </ul>
            <div class="tab-content" id="loginTabsContent">
              <!-- Job Seeker Login -->
              <div class="tab-pane fade show active" id="job-seeker" role="tabpanel" aria-labelledby="job-seeker-tab">
                <h3>Login as Job Seeker</h3>
                <form action="#">
                  <div class="mb-3">
                    <label for="seeker-email" class="form-label">Email</label>
                    <input type="email" class="form-control" id="seeker-email" placeholder="name@example.com" required>
                  </div>
                  <div class="mb-3">
                    <label for="seeker-password" class="form-label">Password</label>
                    <input type="password" class="form-control" id="seeker-password" placeholder="Password" required>
                  </div>
                  <div class="form-check mb-3">
                    <input class="form-check-input" type="checkbox" id="seeker-remember">
                    <label class="form-check-label" for="seeker-remember">Keep me logged in</label>
                  </div>
                  <button type="submit" class="btn btn-primary">Log in</button>
                </form>
              </div>

              <!-- Job Poster Login -->
              <div class="tab-pane fade" id="job-poster" role="tabpanel" aria-labelledby="job-poster-tab">
                <h3>Login as Job Poster</h3>
                <form action="#">
                  <div class="mb-3">
                    <label for="poster-email" class="form-label">Email</label>
                    <input type="email" class="form-control" id="poster-email" placeholder="name@example.com" required>
                  </div>
                  <div class="mb-3">
                    <label for="poster-password" class="form-label">Password</label>
                    <input type="password" class="form-control" id="poster-password" placeholder="Password" required>
                  </div>
                  <div class="form-check mb-3">
                    <input class="form-check-input" type="checkbox" id="poster-remember">
                    <label class="form-check-label" for="poster-remember">Keep me logged in</label>
                  </div>
                  <button type="submit" class="btn btn-primary">Log in</button>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<script src="https://unpkg.com/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
