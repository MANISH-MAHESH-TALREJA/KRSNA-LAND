<%- include('header.ejs'); %>
<section class="bg-primary py-3 py-md-5 py-xl-8">
  <div class="container">
    <div class="row gy-4 align-items-center">
      <div class="col-12 col-md-6 col-xl-7">
        <div class="d-flex justify-content-center text-bg-primary">
          <div class="col-12 col-xl-9">
            <img class="img-fluid rounded mb-4" loading="lazy" src="https://www.iskconcommunications.org/images/faviconiskcon.png" width="245" height="80" alt="ISKCON">
            <hr class="border-primary-subtle mb-4">
            <h2 class="h1 mb-4">Unforgettable Journeys, Tailored for You</h2>
            <p class="lead mb-5">We design personalized itineraries, provide expert travel tips, create inspiring content, and leverage advanced vacation planning tools.</p>
            <div class="text-endx">
              <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" fill="currentColor" class="bi bi-grip-horizontal" viewBox="0 0 16 16">
                <path d="M2 8a1 1 0 1 1 0 2 1 1 0 0 1 0-2zm0-3a1 1 0 1 1 0 2 1 1 0 0 1 0-2zm3 3a1 1 0 1 1 0 2 1 1 0 0 1 0-2zm0-3a1 1 0 1 1 0 2 1 1 0 0 1 0-2zm3 3a1 1 0 1 1 0 2 1 1 0 0 1 0-2zm0-3a1 1 0 1 1 0 2 1 1 0 0 1 0-2zm3 3a1 1 0 1 1 0 2 1 1 0 0 1 0-2zm0-3a1 1 0 1 1 0 2 1 1 0 0 1 0-2zm3 3a1 1 0 1 1 0 2 1 1 0 0 1 0-2zm0-3a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
              </svg>
            </div>
          </div>
        </div>
      </div>
      <div class="col-12 col-md-6 col-xl-5">
        <div class="card border-0 rounded-4">
          <div class="card-body p-3 p-md-4 p-xl-5">
            <ul class="nav nav-tabs mb-4" id="loginTabs" role="tablist">
              <li class="nav-item" role="presentation">
                <button class="nav-link active" id="traveler-tab" data-bs-toggle="tab" data-bs-target="#traveler" type="button" role="tab" aria-controls="traveler" aria-selected="true">Login as Traveler</button>
              </li>
              <li class="nav-item" role="presentation">
                <button class="nav-link" id="host-tab" data-bs-toggle="tab" data-bs-target="#host" type="button" role="tab" aria-controls="host" aria-selected="false">Login as Admin</button>
              </li>
            </ul>
            <div class="tab-content" id="loginTabsContent">
              <!-- Traveler Login -->
              <div class="tab-pane fade show active" id="traveler" role="tabpanel" aria-labelledby="traveler-tab">
                <h3>Login as Traveler</h3>
                <form action="/login" method="post">
                  <div class="mb-3">
                    <label for="traveler-email" class="form-label">Email</label>
                    <input type="email" class="form-control" id="traveler-email" name="username" placeholder="name@example.com" required>
                  </div>
                  <div class="mb-3">
                    <label for="traveler-password" class="form-label">Password</label>
                    <input type="password" class="form-control" id="traveler-password" name="password" placeholder="Password" required>
                  </div>
                  <div class="form-check mb-3">
                    <input class="form-check-input" type="checkbox" id="traveler-remember">
                    <label class="form-check-label" for="traveler-remember">Keep me logged in</label>
                  </div>
                  <div class="mt-3 d-flex justify-content-between">
                    <button type="submit" class="btn btn-outline-primary">Log in</button>
                    <button type="button" class="btn btn-outline-warning" data-bs-toggle="modal" data-bs-target="#resetPasswordModal"> Reset Password</button>
                    <a href="/register" class="btn btn-outline-success">Register</a>
                  </div>
                </form>
              </div>

              <!-- Host Login -->
              <div class="tab-pane fade" id="host" role="tabpanel" aria-labelledby="host-tab">
                <h3>Login as Host</h3>
                <form action="/login" method="post">
                  <div class="mb-3">
                    <label for="host-email" class="form-label">Email</label>
                    <input type="email" class="form-control" id="host-email" placeholder="name@example.com" required>
                  </div>
                  <div class="mb-3">
                    <label for="host-password" class="form-label">Password</label>
                    <input type="password" class="form-control" id="host-password" placeholder="Password" required>
                  </div>
                  <div class="form-check mb-3">
                    <input class="form-check-input" type="checkbox" id="host-remember">
                    <label class="form-check-label" for="host-remember">Keep me logged in</label>
                  </div>

                  <div class="mt-3 d-flex justify-content-between">
                    <button type="submit" class="btn btn-outline-primary">Log in</button>
                    <button type="button" class="btn btn-outline-warning" data-bs-toggle="modal" data-bs-target="#resetPasswordModal"> Reset Password</button>
                    <a href="/register" class="btn btn-outline-success">Register</a>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<%- include('reset-password.ejs'); %>
<%- include('auth-footer.ejs'); %>
